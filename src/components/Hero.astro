---
import check from '@assets/Checkmark.svg'
import hero_desktop from '@assets/Hero Image (Desktop).webp'
import hero_mobile from '@assets/Hero Image (Mobile).webp'
import hero_tablet from '@assets/Hero Image (Tablet).webp'
---

<main class="w-screen h-auto bg-slate-200 pb-14">
    <div class="w-[90%] md:max-w-5xl h-auto mx-auto bg-slate-200 flex flex-col md:flex-row sm:items-center sm:justify-center">
        <section class="w-full md:w-1/2 h-auto flex flex-col items-center justify-center md:items-end md:justify-end sm:hidden">
            <img src={hero_mobile.src} alt="hero_mobile svg" width={hero_mobile.width} height={hero_mobile.height} class="block sm:hidden w-full md:h-96"/>
        </section>
        <section class="hidden md:hidden sm:w-full sm:h-96 sm:flex sm:flex-col sm:items-center sm:justify-center">
            <img src={hero_tablet.src} alt="hero_tablet svg" width={hero_tablet.width} height={hero_tablet.height} class="hidden sm:block sm:w-full sm:h-96"/>
        </section>
        <section class="w-full md:w-1/2 h-full font-cabin text-gray-800 text-left flex flex-col items-start justify-start gap-4">
            <h1 class="text-[28px]/9 sm:text-5xl md:text-[52px] sm:leading-snug font-black mt-8 md:mt-0">Shape your unfiltered thoughts. Get paid.</h1>
            <h3 class="leading-6 text-base text-gray-600 md:leading-7 font-medium">Spense is an open platform for individuals to share their unfiltered thoughts. Discuss the topic you love, and get paid for doing <span class="italic">just</span> that.</h3>
            <ul class="flex flex-col items-start justify-start gap-1 sm:gap-2 font-medium">
                <li class="flex flex-row items-start justify-start gap-3">
                    <img src={check.src} alt="Checkmark svg" width={check.width} height={check.height} />
                    <h5>Receive 99% of the earnings.</h5>
                </li>
                <li class="flex flex-row items-start justify-start gap-3">
                    <img src={check.src} alt="Checkmark svg" width={check.width} height={check.height} />
                    <h5>Get paid via Debit Card, ACH, or Paypal.</h5>
                </li>
                <li class="flex flex-row items-start justify-start gap-3">
                    <img src={check.src} alt="Checkmark svg" width={check.width} height={check.height} />
                    <h5>Withdraw your earnings anytime.</h5>
                </li>
            </ul>
            <form class="flex flex-row items-start justify-around gap-1 sm:gap-4">
                <input type="email" name="email" id="email" class="w-52 h-[52px] border border-gray-400 rounded-md px-3 outline-none" placeholder="john@example.com"/>
                <button class="bg-black text-white font-cabin font-medium text-sm sm:text-base py-1 px-4 sm:py-3 sm:px-5 rounded-md border-2 border-black transition hover:bg-white hover:text-black hover:borde-2 hover:border-black">Get Started</button>
            </form>
        </section>
        <section class="w-1/2 h-auto flex flex-col items-end justify-end">
            <img src={hero_desktop.src} alt="hero_desktop svg" width={hero_desktop.width} height={hero_desktop.height} class="hidden md:inline-block md:w-[420px] md:h-[480px]"/>
        </section>
    </div>
</main>